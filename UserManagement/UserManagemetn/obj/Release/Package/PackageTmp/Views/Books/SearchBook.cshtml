
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>SearchBook</title>
    <style>
        li {
            font-size: 20px;
            font-family: "Times New Roman";
            font-style: normal;
        }
       h1 {
            position: absolute;
            left: 0px;
        }

        .jumbotron {
            background-color: azure;
            padding: 30px;
        }

        body {
            background-color: transparent;
        }

        #button {
            height: 30px;
        }

        #search {
            height: 35px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="col-sm-12 form-inline">
            <div><h1>Search books</h1></div>
            <br />
            <br />
            <br />
            <hr />
            @using (Html.BeginForm("Query", "Books", FormMethod.Post))
            {
                <span>min price:</span>@Html.TextBox("minPrice") <br />
                    <br />

                    <span>max price:</span>@Html.TextBox("maxPrice") <br />
                    <br />

                    <span>Max Shown Result:</span>

                    @Html.DropDownList("maxResult", new List<SelectListItem>()
                        {
                            new SelectListItem() { Text = "10 books", Value = "10" },
                            new SelectListItem() { Text = "20 books", Value = "20" },
                            new SelectListItem() { Text = "30 books", Value = "30" },
                            new SelectListItem() { Text="All books", Value = "100"}
                        })
                    <br />
                    <br />
                    <br />

                    <input id="search" type="submit" value="Search " />

                    <button type="button" class="btn col-sm-offset-1" aria-label="Left Align">
                        @Html.ActionLink("Cancel", "Show", new { pageNumber = 1 })
                    </button>
            }

        </div>
    </div>
    </div>

</body>

</html>
